<div class="insertSection">

	<div id="addItemBlock">
		<form id="addItemForm" action="/addItem" method="post">
			<fieldset>
				<legend>Item details</legend>
                <p><label for="itemTitle">Title</label></p>
					<p><input type="text" onchange="updateItem()" name="itemTitle" id="itemTitle" maxlength="50" size="50" required="required" pattern="[A-Za-z]{1,25}"/></p>
					
					<p><label for="itemPrice">Ticket Price</label></p>
					<p><input type="text" onchange="updateItem()" name="ticketPrice" id="itemPrice" maxlength="50" size="50" required="required" pattern="[0-9]{1,25}"/></p>
					
					<p><label for="itemCostPrice">Cost Price</label></p>
					<p><input type="text" onchange="updateItem()" name="costPrice" id="itemCostPrice" maxlength="50" size="50" required="required" pattern="[0-9]{1,25}"/></p>
					
					<p><label for="itemStock">Quantity</label></p>
					<p><input type="text" onchange="updateItem()" name="itemQuantity" id="itemStock" maxlength="50" size="50" required="required" pattern="[0-9]{1,25}"/></p>
					
					<p><label for="itemDesc">Description</label></p>
					<textarea name="itemDesc" onchange="updateItem()" id="itemDesc" rows="6" cols="40" required="required"></textarea>
			</fieldset>
				<p><input type="submit" />
				<input type="reset" value="Reset form"/>
				</p>
		</form>
	</div>

	<div id="itemManage">
		<div id="leftPanel">
			<div id="itemManagerSearch"  style="width: 100%; float: left;    
				background: linear-gradient(to top left, #333, #ddd);    padding: 10px;
				padding-right: 0px;
				padding-left: 0;">
				Search:<input onchange="searchItems()" id="searchBar"></input>
			</div>

			<!--<table id="itemDisplay"></table>-->
			<!--<image onclick="addItem()" src="images/addButton.png"/>-->
		</div>
		
    
        <div id="rightPanel" ng-controller = "itemController">
              <div  ng-init="getItems()">                        
                            <table class = "table table-responsive table-bordered table-striped table hover">
                                 <thead>
                                      <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Cost Price</th>
                                        <th>Stock</th>
                                      </tr>
                                </thead>
                                
                                    <tr ng-repeat = "item in returnedItems">
                                        <td>{{item.name}}</td>
                                        <td>{{item.description}}</td>
                                        <td>{{item.price}}</td>
                                        <td>{{item.costprice}}</td>
                                        <td>{{item.stock}}</td>  
                                  </tr>
                                  
                            </table>
                                
                        
                    </div>
        </div>
       
    
    
    
    
