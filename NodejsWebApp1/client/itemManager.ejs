	<form id = "addItemForm">
		<fieldset>
			<legend>Item details</legend>
				<p><label for="title">Title</label></p>
				<p><input type="text" name="item title" id="title" maxlength="50" size="50" required="required" pattern="[A-Za-z]{1,25}"/></p>
				
				<p><label for="price">Ticket Price</label></p>
				<p><input type="text" name="ticket price" id="price" maxlength="50" size="50" required="required" pattern="[0-9]{1,25}"/></p>
				
				<p><label for="cost">Cost Price</label></p>
				<p><input type="text" name="cost price" id="cost" maxlength="50" size="50" required="required" pattern="[0-9]{1,25}"/></p>
				
				<p><label for="quantity">Quantity</label></p>
				<p><input type="text" name="item quantity" id="quantity" maxlength="50" size="50" required="required" pattern="[0-9]{1,25}"/></p>
				
				<p><label for="description">Description</label></p>
				<textarea name="item description" id="description" rows="6" cols="40" required="required"></textarea>
		</fieldset>
		<div>
			<p><input type="submit" value="Add"/>
			<input type="reset" value="Reset form"/>
			</p>
		</div>
	</form>
	
</div>